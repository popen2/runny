mixin head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
  base(href='/ui/')
  title(ng-bind="($breadcrumbs | map:'title' | reverse | join:' - ') + (($breadcrumbs | isEmpty) ? '' : ' - ') + 'Runny'")
    | Runny
  +styles
  +favicon

mixin body
  .ng-cloak(style={'opacity': '0.5'} ng-if='!runnyState.loaded')
    three-bounce-spinner
  .ng-cloak(ng-if='runnyState.loaded')
    div(ng-if='runnyState.is_authenticated' ng-include='"/inline/navbar.html"')
    div(ui-view='top-navigation')
    ui-view

doctype html
html(lang='en' ng-app='runny' ng-strict-di='')
  head
    +head
  body
    +body
    +scripts
