nav.navbar.navbar-static-top.navbar-runny
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#runny-navbar-collapse' aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='jobs')
        img.square(src='/static/img/yellow-square.png')
        img.overlay(src='/static/img/logo-initials.png')
    #runny-navbar-collapse.collapse.navbar-collapse
      ul.nav.navbar-nav
        li(ui-sref-active='active')
          a.link(ui-sref='jobs')
            | Jobs
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.link.dropdown-toggle(data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
            user-username(id='curUser.id')
            | &#32;
            i.fa.fa-angle-down
          ul.dropdown-menu
            li
              a(ui-sref='account')
                i.icon-user(style={'padding-right': '.5rem'})
                | Account
            li(ng-if='curUser.is_admin')
              a(ui-sref='admin')
                i.icon-settings(style={'padding-right': '.5rem'})
                | Administration
            li.divider(role='separator')
            li
              a.link(ng-click='curUser.logout()')
                i.icon-logout(style={'padding-right': '.5rem'})
                | Sign Out
